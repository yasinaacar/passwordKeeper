<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>

    <%- include('../partials/nav') %>
    <div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
        <div class="row">
            <div class="col-12">
                <% if (typeof message != "undefined") { %>                    
                    <div class="alert alert-<%= message.class %>" role="alert">
                        <h5 class="text-center"><%= message.text %></h5>
                    </div>
                <% } %>
                <div class="card generatorCard">
                    <div class="card-header">
                        <h5 class="text-green text-center"><i class="fa-solid fa-right-to-bracket me-2"></i>Login</h5>
                    </div>
                    <form method="post" style="padding: 20px;">
                        <div class="row mb-3">
                            <label for="email" class="col-sm-2 col-form-label">E-Mail</label>
                            <div class="col-sm-10">
                                <input type="email" name="email" class="form-control" id="email">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="password" class="col-sm-2 col-form-label">Password</label>
                            <div class="col-sm-10">
                                <input type="password"  id="password" name="password" class="form-control">
                            </div>
                        <div class="row mb-3 mt-3">
                            <div class="col-sm-8 offset-sm-2">
                              <button type="submit" class="btn greenThemeBtn">Log in</button>
                              <a class="ms-4 btn btn-link" href="/auth/reset-password">I forgot my password</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>
</body>
</html>