<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>

    <%- include('../partials/nav') %>
    
    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-12">
                <% if (typeof message != "undefined") { %>
                    <div class="alert alert-warning" role="alert">
                        <%= message.text %>
                      </div>
                <% } %>
            </div>
        </div>
    </div>
    <div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
        <div class="row w-75">
            <div class="col-12">
              <div class="card generatorCard">
                <div class="card-header">
                    <h5 class="text-green text-center"><i class="fa-solid fa-right-to-bracket me-2"></i>New Password</h5>
                </div>
                <form method="post" style="padding: 10px;" action="/auth/new-password">
                    <input type="hidden" name="userId" value="<%= user.id %>">
                    <input type="hidden" name="token" value="<%= token %>">
                    <div class="row mb-3">
                        <label for="password" class="ms-2 col-sm-2">Password :</label>
                        <div class="col-sm-10 offset-sm-1">
                            <input type="password" name="password" class="form-control" id="password">
                        </div>
                    </div>   
                    <div class="row mb-3 mt-5">
                        <div class="col-sm-8 offset-sm-2 d-flex justify-content-center">
                          <button type="submit" class="btn greenThemeBtnOutline" id="updatePassword">Update</button>
                        </div>
                    </div>
                </form>
              </div>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>
</body>
</html>