<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>

    <%- include('../partials/nav') %>
    
    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-12">
                <% if (typeof message != "undefined") { %>
                    <div class="alert alert-warning" role="alert">
                        <%= message.text %>
                      </div>
                <% } %>
            </div>
        </div>
    </div>
    <div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
        <div class="row">
            <div class="col-12">
              <div class="card generatorCard" style="height: 440px;">
                <div class="card-header">
                    <h5 class="text-green text-center"><i class="fa-solid fa-right-to-bracket me-2"></i>Sign Up</h5>
                </div>
                <form method="post" style="padding: 10px;">
                    <div class="row mb-3">
                        <label for="fullName" class="ms-2 col-form-label">Full Name :</label>
                        <div class="col-sm-10 offset-sm-1">
                            <input type="text" name="fullName" class="form-control" id="fullName">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="email" class="ms-2 col-form-label">E-Mail :</label>
                        <div class="col-sm-10 offset-sm-1">
                            <input type="email" name="email" class="form-control" id="email">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="password" class="ms-2 col-form-label">Password : </label>
                        <div class="col-sm-10 offset-sm-1">
                            <input type="password"  id="password" name="password" class="form-control">
                        </div>
                    </div> 
                    <div class="row mb-3">
                      <label for="passwordAgain" class="ms-2 col-form-label">Password Again : </label>
                      <div class="col-sm-10 offset-sm-1">
                          <input type="password"  id="passwordAgain" name="passwordAgain" class="form-control">

                      </div>
                    </div>   
                    <div class="row mb-3 mt-5">
                        <div class="col-sm-8 offset-sm-2 d-flex justify-content-center">
                          <button type="submit" class="btn greenThemeBtnOutline" id="signUp">Sign Up</button>
                        </div>
                    </div>
                </form>
              </div>
            </div>
        </div>
    </div>

    <%- include('../partials/script') %>
</body>
</html>