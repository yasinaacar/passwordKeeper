<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mt-5">
                <h3 class="text-center"><%= title %></h3>
                <% if (typeof message != "undefined") { %>
                    <% if (action !="undefined") { %>
                        <div class="alert alert-<%= message.class %> " role="alert">
                            <p><%= message.text %></p>
                        </div>
                    <% } %>
                <% } %>
                <div class="row filterAndSearch" style="margin: 15px 0;">
                    <div class="col-12 border-bottom p-2 d-flex justify-content-between">
                        <div class="col-4"></div>
                        <div class="searchArea col-3 d-flex">
                            <input class="form-control me-2" type="search"  id="searchInput" placeholder="Search in the <%= title %>">
                            <i class="fa-solid fa-magnifying-glass ms-2" style="opacity: 0.2; margin-top: 11px; font-size: 18px;"></i>
                        </div>
                    </div>
                </div>   
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <th>#id</th>
                        <th>E-Mail Adress</th>
                        <th>Registered Platforms</th>
                        <th width="140px" class="text-center"><a href="/admin/email/create" class=" btn greenThemeBtn py-1 px-2">+ Create</a></th>
                    </thead>
                    <tbody>
                        <% emails.forEach(mail => { %>   
                            <tr>
                                <td><%= mail.id %></td>
                                <td class="searchItem"><%= mail.email %></td>
                                <td>0</td>
                                <td>
                                  <div class="listDirectionBtn">
                                    <a href="/admin/email/edit/<%= mail.id %>" class="editBtn"><i class="fa-regular fa-pen-to-square"></i></a>
                                    <a href="/admin/email/delete/<%= mail.id %>" class="deleteBtn"><i class="fa-solid fa-trash"></i></a>
                                  </div>
                                </td>
                            </tr>                      
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
      </div>
    <%- include('../partials/script') %>
    <script src="/static/js/tableSearch.js"></script>

</body>
</html>