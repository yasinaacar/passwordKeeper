<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>
    <div class="container mt-3">
        <div class="row my-5">
                <h3 class="text-center my-5"><%= title %></h3>
                <%- include('../partials/alert') %>
                <form method="post" enctype="multipart/form-data" class="d-flex justify-content-center">
                    <div class="col-md-10">
                        <div class="row mb-3">
                          <label for="platformName" class="col-sm-2 col-form-label">Platform Name : </label>
                          <div class="col-sm-8">
                              <input type="text" class="form-control" id="platformName" name="platformName">
                          </div>
                        </div>
                        <div class="row mb-3">
                          <label for="logo" class="col-sm-2 col-form-label">Logo : </label>
                          <div class="col-sm-8">
                              <input type="file" class="form-control" id="logo" name="logo">
                          </div>
                        </div>
                        <div class="row mb-3">
                            <label for="url" class="col-sm-2 col-form-label">URL : </label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon3">https://</span>
                                    <input type="text" class="form-control" id="url" name="url" aria-describedby="basic-addon3" placeholder="paste link">
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                              <button type="submit" class="btn greenThemeBtn">Create</button>
                              <a href="/admin/platforms" class="btn greenThemeBtnOutline ms-2">Cancel</a>
                            </div>
                        </div>
                    </div>
              </form>
        </div>
    </div>
    <%- include('../partials/script') %>
</body>
</html>