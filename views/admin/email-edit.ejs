<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <h3 class="text-center my-5"><%= title %></h3>
                <form method="post">
                    <%- include('../partials/alert') %>
                    <div class="row mb-3 d-flex justify-content-center align-items-center" style="height: 50vh;">
                        <label for="mail" class="col-sm-1 col-form-label">E-mail</label>
                        <div class="col-sm-10 d-flex">
                            <input type="email" class="form-control" id="mail" placeholder="name@example.com" name="mail" value="<%= email.email %>">
                            <input type="hidden" name="mailId" value="<%= email.id %>">
                            <button type="submit" class="btn greenThemeBtn ms-3">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include('../partials/script') %>
</body>
</html>